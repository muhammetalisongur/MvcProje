@model MvcStok.Models.Entity.Urunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Urun Ad</label>
        <input type="text" class="form-control" name="UrunAd" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="Marka" />
    </div>
    <div>
        <label>Urun Kategori</label>
        @Html.DropDownListFor(x => x.Kategoriler.KategoriID, (List<SelectListItem>)ViewBag.dgr,new {@class="form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Urun Ekle</button>
    </div>

</form>
