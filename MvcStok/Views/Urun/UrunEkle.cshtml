@model MvcStok.Models.Entity.Urunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Urun Ad</label>
        <input type="text" class="form-control" name="UrunAd" required
               oninvalid="this.setCustomValidity('Urun adini bos gecemezsiniz')"
               oninput="this.setCustomValidity('')" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="Marka" required
               oninvalid="this.setCustomValidity('Urun markasini bos gecemezsiniz')"
               oninput="this.setCustomValidity('')" />
    </div>
    <div>
        <label>Urun Kategori</label>
        @Html.DropDownListFor(x => x.Kategoriler.KategoriID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" required
               oninvalid="this.setCustomValidity('Urun fiyatini bos gecemezsiniz')"
               oninput="this.setCustomValidity('')" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="Stok" required
               oninvalid="this.setCustomValidity('Urun stok bilgisini gecemezsiniz')"
               oninput="this.setCustomValidity('')" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Urun Ekle</button>
    </div>

</form>
